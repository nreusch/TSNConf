<!-- mtu, overhead, mac_length in Byte. All times in us-->
<NetworkDescription mtu="1500" frame_overhead="22" key_length="16" mac_length="16">
	<!-- Expected order: devices, links, applications(tasks, signals, (functionpaths)), streams, routes, schedule-->
	<device name="SW1" type="Switch"/>
	<device name="SW2" type="Switch"/>
	<device name="ES1" type="EndSystem" mac_exec_time="10"/>
	<device name="ES2" type="EndSystem" mac_exec_time="10"/>
	<device name="ES3" type="EndSystem" mac_exec_time="10"/>
	<device name="ES4" type="EndSystem" mac_exec_time="10"/>

	<!-- Links are directional. speed = byte/us -->
	<link src="SW1" dest="ES1" speed="1.25"/>
	<link src="SW1" dest="ES2" speed="1.25"/>
	<link src="SW1" dest="ES3" speed="1.25"/>
	<link src="SW1" dest="ES4" speed="1.25"/>
	<link src="SW2" dest="ES1" speed="1.25"/>
	<link src="SW2" dest="ES2" speed="1.25"/>
	<link src="SW2" dest="ES3" speed="1.25"/>
	<link src="SW2" dest="ES4" speed="1.25"/>
	<link src="ES1" dest="SW1" speed="1.25"/>
	<link src="ES1" dest="SW2" speed="1.25"/>
	<link src="ES2" dest="SW1" speed="1.25"/>
	<link src="ES2" dest="SW2" speed="1.25"/>
	<link src="ES3" dest="SW1" speed="1.25"/>
	<link src="ES3" dest="SW2" speed="1.25"/>
	<link src="ES4" dest="SW1" speed="1.25"/>
	<link src="ES4" dest="SW2" speed="1.25"/>

	<!-- period&wcet is in us, size in Byte-->
	<application name="App1" period="1000" type="NORMAL">
		<tasks>
			<task name="t1" node="ES1" wcet="100" period="1000" type="NORMAL"/>
			<task name="t2" node="ES3" wcet="100" period="1000" type="NORMAL"/>
		</tasks>
		<streams>
			<stream name="s1" src="ES1" dest="ES3" sender_task="t1" receiver_tasks="t2" size="50" period="1000" rl="1" secure="True" type="NORMAL" />
		</streams>
	</application>

	<path name="path_t1_t2" deadline="1000">
		<task name="t1"/>
		<task name="t2"/>
	</path>

</NetworkDescription>